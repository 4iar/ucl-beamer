\usetheme{default}
\usecolortheme{ucl}

\defbeamertemplate*{headline}{ucl}{% for everything else
  \begin{beamercolorbox}[wd=\paperwidth]{banner stripe}
    \uclcolorname{banner.bg}{\ucl@bannercolorname}
    \includegraphics{banners/uclbanner\ucl@bannercolorname}%
    \ifbeamercolorempty[bg]{banner stripe}{}{\vskip0.015\paperwidth}
  \end{beamercolorbox}
}

\defbeamertemplate{headline}{ucl large}{% 50% higher
  % the banner image is 363 * 29 pixels
  \begin{beamercolorbox}{banner stripe}
    \uclcolorname{banner.bg}{\ucl@bannercolorname}
    \includegraphics[width=\paperwidth,trim=121 0 0 0]{banners/uclbanner\ucl@bannercolorname}%
    \ifbeamercolorempty[bg]{banner stripe}{}{\vskip0.0225\paperwidth}
  \end{beamercolorbox}
}

\useinnertheme{rectangles}
\setbeamertemplate{items}[square]

