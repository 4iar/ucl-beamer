\def\setbannercolor#1{\gdef\ucl@banner{uclbanner#1}}
\def\ucl@banner{\@latex@error{\noexpand\setbannercolor not set}\@ehc}

\DeclareOptionBeamer{color}{\PassOptionsToPackage{color=#1}{beamercolorthemeucl}}
\DeclareOptionBeamer{blockborder}{\useinnertheme{blockborder}}

\ProcessOptionsBeamer

\usetheme{default}
\usecolortheme{ucl}

\defbeamertemplate*{headline}{ucl}{% for everything else
  \begin{beamercolorbox}[wd=\paperwidth]{headline canvas}
    \includegraphics{banners/\ucl@banner}%
    % this should be equal to the height of the building in the logo
    \ifbeamercolorempty[bg]{headline canvas}{}{\vskip0.015\paperwidth}
  \end{beamercolorbox}
}

\defbeamertemplate{headline}{ucllarge}{% for title pages
  % the banner image is 363 * 29 pixels
  \begin{beamercolorbox}{headline canvas}
    \includegraphics[width=\paperwidth,trim=121 0 0 0]{banners/ucl@banner}%
    \ifbeamercolorempty[bg]{headline canvas}{}{\vskip0.0225\paperwidth}
  \end{beamercolorbox}
}

